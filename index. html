    body {
        font-family: Arial;
        text-align: center;
        margin-top: 50px;
        background: #e8e8e8;
    }
    .hidden { display: none; }
    button {
        padding: 12px 25px;
        margin: 12px;
        font-size: 18px;
        border-radius: 10px;
        border: none;
        background: #ff5722;
        color: white;
